<?xml version="1.0" encoding="UTF-8"?>
<cache
    xmlns="http://geode.apache.org/schema/cache"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://geode.apache.org/schema/cache http://geode.apache.org/schema/cache/cache-1.0.xsd"
    version="1.0">

  <region name="Customer">
    <region-attributes refid="REPLICATE">
      <!-- TODO-01: Add a configuration to have an idle time expiration after 10 seconds with an action of destroy -->
      <entry-idle-time>
        <expiration-attributes timeout="10" action="destroy" />
      </entry-idle-time>

      <!-- TODO-02: Add a configuration to register the ServerCacheListener as an event listener -->
      <cache-listener>
        <class-name>io.pivotal.bookshop.buslogic.ServerCacheListener</class-name>
      </cache-listener>

      <!-- TODO-07: Add a configuration to evict entries when entry count exceeds 4 entries -->
      <eviction-attributes>
        <lru-entry-count maximum="4" action="local-destroy" />
      </eviction-attributes>

    </region-attributes>
  </region>
</cache>